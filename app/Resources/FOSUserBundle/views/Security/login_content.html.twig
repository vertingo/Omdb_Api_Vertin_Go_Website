{% trans_default_domain 'FOSUserBundle' %}

  <div class="col-md-3 col-md-offset-4 ">

{% if error %}  <center>  <div style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    </center>
{% endif %}

<br><br>


    <form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
    <label for="username">login</label>
    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>


    <div class="form-group">
    <label for="password">mot de passe</label>
    <input type="password" class="form-control" id="password" name="_password" required="required" />
    </div>


    <div class="form-group">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">remembre me</label>
    </div>

    <input type="submit"  class="btn btn-primary" id="_submit" name="_submit" value="{{ 'Se connecter'|trans }}" />


   </form>

</div>