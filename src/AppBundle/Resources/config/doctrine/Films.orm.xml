    <field name="imdbVotes" type="integer" column="imdb_votes" length="255"/>
    <field name="imdbId" type="string" column="imdb_id" length="255"/>
    <field name="type" type="string" column="type" length="255"/>
    <field name="dvd" type="string" column="dvd" length="255"/>
    <field name="boxoffice" type="string" column="boxoffice" length="255"/>
    <field name="production" type="string" column="production" length="255"/>
    <field name="website" type="string" column="website" length="255"/>
