    <field name="classification" type="string" column="classification" length="255"/>
    <field name="sortie" type="string" column="sortie" length="255"/>
    <field name="duree" type="integer" column="duree" length="255"/>
    <field name="genre" type="string" column="genre" length="255"/>
    <field name="directeur" type="string" column="directeur" length="255"/>
